<h1>Thoughts</h1>
<ul>
  <% posts.each do |post| %>
  <li class="admin-item">
    <h3>
      <%= post.title %>
    </h3>
    <ul>
      <li>
        <%= link_to button_tag("Edit"), edit_admin_post_url(post) %>
      </li>
      <li>
        <%= link_to button_tag("Revisions"), admin_post_revisions_url(post_id: post.id) %>
      </li>
      <li>
        <%= link_to button_tag("URL"), post_url(slug: post.slug) if post.published? %>
      </li>
    </ul>
  </li>
  <% end %>
</ul>
