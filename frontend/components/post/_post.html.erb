<article class="post">
  <header>
    <h2>
      <%= post.title %>
    </h2>
  </header>
  <section class="publishing">
    Published : <time datetime="<%= post.published_at %>"><%= post.published_at.strftime("%Y-%m-%d") %></time>
  </section>
  <section class="content">
    <%= markdown(post.content) %>
  </section>
  <footer>
    <%= link_to "&nbsp;".html_safe, post.slug, :class => 'permalink fas fa-anchor' %>
  </footer>
</article>
